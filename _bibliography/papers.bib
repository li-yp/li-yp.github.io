  author={Saucan, Augustin-Alexandru and Li, Yunpeng and Coates, Mark},
  booktitle={SPIE Conference on Signal Processing, Sensor/Information Fusion, and Target Recognition},
  year={2017},
  abstract={In this paper we propose a Superpositional Marginalized Œ¥-GLMB (SMŒ¥-GLMB) filter for multi-target tracking and we provide bootstrap and particle flow particle filter implementations. Particle filter implementations of the marginalized Œ¥-GLMB filter are computationally demanding. As a first contribution we show that for the specific case of superpositional observation models, a reduced complexity update step can be achieved by employing a superpositional change of variables. The resulting SMŒ¥-GLMB filter can be readily implemented using the unscented Kalman filter or particle filtering methods. As a second contribution, we employ particle flow to produce a measurement-driven importance distribution that serves as a proposal in the SMŒ¥-GLMB particle filter. In high-dimensional state systems or for highly- informative observations the generic particle filter often suffers from weight degeneracy or otherwise requires a prohibitively large number of particles. Particle flow avoids particle weight degeneracy by guiding particles to regions where the posterior is significant. Numerical simulations showcase the reduced complexity and improved performance of the bootstrap SMŒ¥-GLMB filter with respect to the bootstrap MŒ¥-GLMB filter. The particle flow SMŒ¥-GLMB filter further improves the accuracy of track estimates for highly informative measurements.},
  html={https://www.spiedigitallibrary.org/conference-proceedings-of-spie/10200/102000F/Particle-flow-superpositional-GLMB-filter/10.1117/12.2263236.short},
  pdf={http://networks.ece.mcgill.ca/sites/default/files/particle-flow-superpositional_final.pdf},
  selected={false}
}

@inproceedings{saucan2017b,
  abbr={ICASSP},
  title={Particle flow SMC delta-GLMB filter},
  author={Saucan, Augustin-Alexandru and Li, Yunpeng and Coates, Mark},
  booktitle=ICASSP,
  abstract={In this paper we derive a particle flow particle filter implementation of the Œ¥-Generalized Labeled Multi-Bernoulli (Œ¥-GLMB) filter. The bootstrap particle filter Œ¥-GLMB suffers from weight degeneracy for high-dimensional state systems or low measurement noise. In order to avoid weight degeneracy, we employ particle flow to produce a measurement-driven importance distribution that serves as a proposal in the Œ¥-GLMB particle filter. Flow-induced proposals are developed for both types of targets encountered in the Œ¥-GLMB filter, i.e., persistent and birth targets. Numerical simulations reflect the improved performance of the proposed filter with respect to classical bootstrap implementations.},
